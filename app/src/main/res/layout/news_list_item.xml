<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/cornerRadiusCardView"
    android:layout_marginRight="@dimen/marginLeftAndRightCardView"
    android:layout_marginLeft="@dimen/marginLeftAndRightCardView"
    android:layout_marginTop="@dimen/marginTopAndBottomCardView"
    android:layout_marginBottom="@dimen/marginTopAndBottomCardView">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/text_padding"
    android:layout_marginBottom="@dimen/text_padding">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/text_padding"
        android:layout_marginStart="@dimen/text_padding">
        <TextView
            android:id="@+id/article_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/Article"
            tools:text="@string/help_article"/>
        <TextView
            android:id="@+id/article_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/help_topic"
            style="@style/Topic"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/text_padding"
        android:layout_marginRight="@dimen/text_padding"
        android:layout_marginEnd="@dimen/text_padding">

        <TextView
            android:id="@+id/article_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="@string/help_date" />

        <TextView
            android:id="@+id/article_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/help_time" />

    </LinearLayout>


</LinearLayout>


</android.support.v7.widget.CardView>